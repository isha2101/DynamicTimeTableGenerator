@{
    int totalSubjects = (int)ViewBag.TotalSubjects;
    int totalHours = (int)ViewBag.TotalHours;
}

<style>
 

    form {
        background-color: #fff;
        padding: 30px 40px;
        border-radius: 12px;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 600px;
    }

    p, h2 {
        color: #333;
        font-size: 18px;
    }

    .error-message {
        color: red;
        margin-bottom: 10px;
        font-weight: bold;
    }

    .subject-entry {
        display: flex;
        gap: 20px;
        margin-bottom: 15px;
        align-items: center;
    }

        .subject-entry input[type="text"],
        .subject-entry input[type="number"] {
            flex: 1;
            padding: 10px 12px;
            border: 1.5px solid #ccc;
            border-radius: 6px;
            font-size: 16px;
            transition: border-color 0.3s ease;
        }

    input:focus {
        outline: none;
        border-color: #4e54c8;
        box-shadow: 0 0 0 3px rgba(78, 84, 200, 0.1);
    }

    button {
        margin-top: 25px;
        width: 100%;
        background: linear-gradient(to right, #4e54c8, #8f94fb);
        color: white;
        padding: 12px;
        font-size: 16px;
        font-weight: bold;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background 0.3s ease;
    }

        button:hover {
            background: linear-gradient(to right, #3b3f9b, #6e75e3);
        }
</style>

@if (!ViewData.ModelState.IsValid)
{
    foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
    {
        <p style="color:red">@error.ErrorMessage</p>
    }
}

<form asp-action="GenerateTimeTable" method="post">
    <p>Required total hours for all subjects: <strong>@totalHours</strong></p>

    @for (int i = 0; i < totalSubjects; i++)
    {
        <div>
            <input name="[@i].SubjectName" placeholder="Subject Name" required />
            <input name="[@i].Hours" placeholder="Hours" type="number" min="1" required />
        </div>
    }

    <button type="submit">Generate</button>
</form>

